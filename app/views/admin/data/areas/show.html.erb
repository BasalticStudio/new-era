<%= render Admin::CardComponent.new(title: @area.name) do %>
  <%= render Admin::TableComponent.new do |c| %>
    <% c.with_row do |row| %>
      <% row.with_cell_head.with_content(@area.class.human_attribute_name(:name)) %>
      <% row.with_cell_data.with_content(@area.name) %>
    <% end %>
    <% c.with_row do |row| %>
      <% row.with_cell_head.with_content(@area.class.human_attribute_name(:map)) %>
      <% row.with_cell_data.with_content(@area.map_id) %>
    <% end %>
    <% c.with_row do |row| %>
      <% row.with_cell_head.with_content(@area.class.human_attribute_name(:terrain)) %>
      <% row.with_cell_data.with_content(@area.terrain) %>
    <% end %>
  <% end %>
<% end %>
