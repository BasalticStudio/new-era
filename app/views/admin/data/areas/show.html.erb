<%= render Admin::CardComponent.new(title: @resource.name) do %>
  <%= render Admin::TableComponent.new do |c| %>
    <% c.with_row do |row| %>
      <% row.with_cell_head.with_content(resource_class.human_attribute_name(:name)) %>
      <% row.with_cell_data.with_content(@resource.name) %>
    <% end %>
    <% c.with_row do |row| %>
      <% row.with_cell_head.with_content(resource_class.human_attribute_name(:map)) %>
      <% row.with_cell_data.with_content(@resource.map_id) %>
    <% end %>
    <% c.with_row do |row| %>
      <% row.with_cell_head.with_content(resource_class.human_attribute_name(:terrain)) %>
      <% row.with_cell_data.with_content(@resource.terrain) %>
    <% end %>
  <% end %>
<% end %>
