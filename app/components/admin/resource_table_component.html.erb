<%= render Admin::TableComponent.new do |c| %>
  <% c.with_header do |head| %>
    <% column_names.each do |name| %>
      <% head.with_cell_head.with_content(name) %>
    <% end %>
    <% head.with_cell_head.with_content('') %>
  <% end %>
  <% @collection.each do |item| %>
    <% c.with_row do |row| %>
      <% item.values_at(*@columns).each do |value| %>
        <% row.with_cell_data.with_content(value) %>
      <% end %>
      <% row.with_cell_data do %>
        <%= link_to t('.view'), build_link_for(item), class: 'bg-sky-500 text-white active:bg-sky-600 text-xs font-bold uppercase px-3 py-1 rounded outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150' %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
